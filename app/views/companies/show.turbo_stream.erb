<%= turbo_stream.update :company_detail_overview do %>
  <div class="bg-base-100">
    <div class="px-4 sm:px-0 mt-8">
      <div class="flex space-between">
        <h3 class="text-2xl font-semibold leading-7 text-base-content p-8"> <%= @company.name %></h3>
      </div>
      <div class="flex">
        <p class="mt-1 px-4 text-sm leading-6 text-base-content/60">
          <%= industry_names(@company) %>
        </p>
        <p class="mt-1 px-4 text-sm leading-6 text-base-content/60">
          <%= segment_names(@company) %>
        </p>
        <p class="mt-1 px-4 text-sm leading-6 text-base-content/60">
          <%= business_model_names(@company) %>
        </p>
        </div>
      <div class="flex">
        <p class="mt-1 px-4 text-sm leading-6 text-base-content/60">
          <%= @company.round %>
        </p>
        <p class="mt-1 px-4 text-sm leading-6 text-base-content/60">
          <%= @company.hq_city %>, <%= @company.hq_country %>
        </p>
      </div>
    </div>
  </div>
<% end %>